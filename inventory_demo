# Red Hat Satellite Demo Inventory
# Demo environment configuration for Satellite 6.17 automation

[satellite_servers]
satellite.example.com ansible_host=192.168.1.100

[rhel_servers]
rhel9-demo-01.example.com ansible_host=192.168.1.101
rhel9-demo-02.example.com ansible_host=192.168.1.102
rhel9-demo-03.example.com ansible_host=192.168.1.103

[windows_servers]
win2022-demo-01.example.com ansible_host=192.168.1.201
win2022-demo-02.example.com ansible_host=192.168.1.202

[demo_environment:children]
satellite_servers
rhel_servers
windows_servers

[satellite_servers:vars]
# Satellite server connection settings
ansible_user=root
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_python_interpreter=/usr/bin/python3

# Satellite admin credentials for demo
satellite_username=admin
satellite_password=NTY4NjIw
satellite_organization="Default Organization"
satellite_location="Default Location"

[rhel_servers:vars]
# RHEL server connection settings
ansible_user=root
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_python_interpreter=/usr/bin/python3

# Registration settings
satellite_server_url=https://satellite.example.com
satellite_activation_key=RHEL_9_PROD_x86_64_Key
satellite_org_id=Default_Organization

[windows_servers:vars]
# Windows server connection settings
ansible_user=Administrator
ansible_password=NTY4NjIw
ansible_connection=winrm
ansible_winrm_server_cert_validation=ignore
ansible_winrm_transport=basic
ansible_winrm_port=5985

[demo_environment:vars]
# Global demo settings
demo_mode=true
debug_mode=true
generate_reports=true
reports_directory=./demo_reports

# Demo credentials (DO NOT use in production)
