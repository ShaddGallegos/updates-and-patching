# Unified Satellite Management Inventory
# Configure your satellite servers and connection details

[satellite_servers]
satellite.example.com ansible_host=192.168.1.100
# satellite2.example.com ansible_host=192.168.1.101

[satellite_servers:vars]
# Satellite connection details
satellite_url=https://satellite.example.com
satellite_username=admin
satellite_password=changeme
satellite_organization="Default Organization"
satellite_location="Default Location"
satellite_validate_certs=false

# SSH connection settings
ansible_user=root
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

